extends layout

include _includes/sharedHTMLfunctions

block content
  .row.banner
    .col-12
      h1= pageHeader.title
        small &nbsp;#{pageHeader.strapline}
  .row
    .col-12.col-md-8
      .error= message
      each shop in shops
        .card
          .card-block
            h4
              a(href=`/shop/${shop._shopId._id}/food/${shop._id}`)= shop.name
              small &nbsp;
              span.badge.badge-pill.badge-default.float-right= shop.distance
            p.address= shop.address
              span.badge.badge-pill.badge-default.float-right= '200km'


    .col-12.col-md-4
      p.lead= sidebar