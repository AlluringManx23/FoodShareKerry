extends layout

include _includes/sharedHTMLfunctions

block content
  .row.banner
    .col-12
      h1= pageHeader.title
        small &nbsp;#{pageHeader.strapline}
  .row
    .col-12.col-md-8
      .error= message
      each shop in shops
        .card
          .card-block
            h4
              a(href=`/shop/${shop._shopId._id}`)= `${shop._shopId.name}  `
              span.badge.badge-pill.badge-default.float-right= shop.distance
              - if (shop._shopId.closed == false)
                span.badge.badge-pill.badge-default= `Open`
              - if (shop._shopId.closed == true)
                span.badge.badge-pill.badge-default= `Closed`
            p=`Open From ${shop._shopId.openingtime} to ${shop._shopId.closingtime}`
            p.address= shop._shopId.address
            


    .col-12.col-md-4
      p.lead= sidebar